{
    admin off
    log {
        output stdout
        format json
        level {$LOG_LEVEL:INFO}
    }
    auto_https off
}

:{$PORT:8080} {
    # Health check endpoint
    handle /health {
        respond "OK" 200
    }

    # Main proxy configuration
    handle {
        reverse_proxy https://public.api.megausd.money:443 {
            # Header management - hardcoded for debugging
            header_up Host public.api.megausd.money
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-Proto https

            # Remove headers that might interfere
            header_up -X-Forwarded-For
            header_up -X-Forwarded-Host

            # Transport settings for HTTPS upstreams
            transport http {
                tls
                tls_server_name public.api.megausd.money
            }
        }

        # Compression
        encode {
            gzip
            minimum_length 1024
        }

        # Security headers
        header {
            X-Content-Type-Options "nosniff"
            X-Frame-Options "SAMEORIGIN"
            X-XSS-Protection "1; mode=block"
            Referrer-Policy "strict-origin-when-cross-origin"
            -Server
        }

        # CORS (customize as needed)
        @cors_preflight {
            method OPTIONS
        }
        header @cors_preflight {
            Access-Control-Allow-Origin "*"
            Access-Control-Allow-Methods "GET, POST, PUT, PATCH, DELETE, OPTIONS"
            Access-Control-Allow-Headers "Content-Type, Authorization"
            Access-Control-Max-Age "3600"
        }
        respond @cors_preflight 204
    }

    # Error handling
    handle_errors {
        respond "{err.status_code} {err.status_text}"
    }
}